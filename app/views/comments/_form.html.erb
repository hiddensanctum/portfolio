<div class="well">
  <fieldset>
    <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for([@commentable, @comment]) do |f| %>
  <div class="form-group">
    <%= f.label :author, "Name" %>
    <%= f.text_field :author, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author_email, "Email" %>
    <%= f.text_field :author_email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author_url, "URL" %>
    <%= f.text_field :author_url, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Comment" %>
    <%= f.text_field :content, :class => "form-control" %>
  </div>
    <%= f.hidden_field :referrer, value: request.referrer %>
  <div class="form-group">
    <%= f.submit "Submit comment for approval", :class => 'btn btn-default' %>
  </div>
<% end %>
</fieldset>
</div>
