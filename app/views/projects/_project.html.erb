<div class="row" id="<%= dom_id(project) %>">
  <div class="col-lg-7 col-md-7">
    <%= image_tag project.image_url(:thumb).to_s, :class => 'img-responsive' %>
  </div>
  <div class="col-lg-5 col-md-5">
    <h3><%= link_to project.name, project %></h3>
    <p><%= project.technologies_used %></p>
    <% if current_user.present? %>
      <%= link_to 'Edit', edit_project_path(project), remote: true, :class => 'btn btn-primary' %>
      <%= link_to 'Destroy', project, method: :delete, data: {confirm: 'Are you sure?'}, remote: true, :class => 'btn btn-warning' %>
    <% end %>
  </div>
</div>
